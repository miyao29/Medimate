<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 배경색 (연한 회색) -->
    <solid android:color="#FFFFFF" />

    <!-- 테두리 색 + 두께 -->
    <stroke
        android:width="1dp"
        android:color="#DADDD8" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="12dp" />

    <!-- 내부 패딩 -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp" />

</shape>
