<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32dp"
        android:paddingBottom="32dp"
        android:paddingHorizontal="24dp">

        <TextView
            android:id="@+id/tvGuideTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 자르기 가이드"
            android:textColor="#333333"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:requiresFadingEdge="vertical"
            android:fadingEdgeLength="30dp"
            app:layout_constrainedHeight="true"
            app:layout_constraintHeight_max="400dp"
            app:layout_constraintTop_toBottomOf="@id/tvGuideTitle"
            app:layout_constraintBottom_toTopOf="@id/btn_start_crop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/imgGuide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:contentDescription="크롭 가이드 예시 이미지"
                    android:scaleType="fitCenter"
                    android:src="@drawable/gemini_generated_image_irs5a8irs5a8irs5"
                    android:layout_marginBottom="24dp"
                    android:maxHeight="250dp" />

                <TextView
                    android:id="@+id/tvGuideContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp"
                    android:text="1. 붉은색 사각형 영역으로 표시 된 복약안내표 부분만 남겨주세요.\n2. 모서리를 잡고 움직여서 사각형 크기를 표에 맞춰주세요."
                    android:textColor="#555555"
                    android:textSize="17sp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_crop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="네, 자르러 갈게요"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#636F65"
            app:cornerRadius="16dp"
            app:minHeight="56dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>