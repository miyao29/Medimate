<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ocr_main_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/header_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_header_rounded"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/header_subtitle"
        android:layout_marginBottom="-80dp"
        />

    <ImageView
        android:id="@+id/header_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/medimate_logo_whiteback"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Medimate"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/header_icon"
        app:layout_constraintStart_toEndOf="@id/header_icon"
        app:layout_constraintTop_toTopOf="@id/header_icon"
        app:layout_constraintVertical_bias="1.0" />


    <TextView
        android:id="@+id/header_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="56dp"
        android:lineSpacingExtra="4dp"
        android:text="약봉투를 찍으면\n음성으로 설명해드려요."
        android:textColor="#E0E0E0"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/header_icon"
        app:layout_constraintTop_toBottomOf="@id/header_icon"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:minHeight="100dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"

        app:layout_constraintTop_toBottomOf="@id/header_bg"
        app:layout_constraintBottom_toTopOf="@+id/card_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/camera_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingVertical="24dp"
        android:scrollbarAlwaysDrawVerticalTrack="false">

        <ImageView
            android:id="@+id/img_cam"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/kakaotalk_photo_2025_11_19_21_35_35"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_cam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="카메라로 촬영하기"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_cam"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sub_cam"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/sub_cam"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="약봉투 전체가 나오게 찍어주세요"
            android:textColor="#888888"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_cam"
            app:layout_constraintTop_toBottomOf="@+id/title_cam"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

<com.google.android.material.card.MaterialCardView
android:id="@+id/card_gallery"
android:layout_width="0dp"
android:layout_height="wrap_content"
app:minHeight="100dp"
android:layout_marginHorizontal="24dp"
android:clickable="true"
android:focusable="true"
android:foreground="?attr/selectableItemBackground"
app:cardBackgroundColor="#FFFFFF"
app:cardCornerRadius="20dp"
app:cardElevation="6dp"

app:layout_constraintTop_toBottomOf="@+id/card_camera"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="24dp">

    <ImageView
        android:id="@+id/img_gal"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/kakaotalk_photo_2025_11_19_21_35_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/title_gal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="갤러리에서 가져오기"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_gal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/sub_gal"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/sub_gal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="이미 저장된 사진을 분석합니다"
        android:textSize="13sp"
        android:textColor="#888888"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_gal"
        app:layout_constraintTop_toBottomOf="@+id/title_gal"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>

<ImageButton
android:id="@+id/btnBack"
android:layout_width="48dp"
android:layout_height="48dp"
android:layout_marginStart="8dp"
android:layout_marginTop="4dp"
android:background="?attr/selectableItemBackgroundBorderless"
android:contentDescription="Back"
android:src="?attr/homeAsUpIndicator"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent"
app:tint="#FFFFFF" />


    </androidx.constraintlayout.widget.ConstraintLayout>