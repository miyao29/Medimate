<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="개선하고 싶은 부분을\n순서대로 골라주세요"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="최대 3개까지 선택할 수 있어요."
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="건강검진 항목 관련"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_health_checkup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_liver"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="간 건강"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_fatigue"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활력/피로"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_body_fat"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="체지방 관리"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_cholesterol"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="콜레스테롤"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_blood_sugar"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혈당 관리"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_blood_pressure"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="혈압 관리"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="주요 장기 관련"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_organs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_brain"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뇌 건강"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_eye"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="눈 건강"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_bone"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="뼈 건강"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_stomach"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위 건강"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_intestine"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장 건강"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="일상 생활 관련"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_daily_life"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_joint_muscle"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="관절/근육"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_immunity"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="면역력"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_hair_nail"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모발/손톱"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sleep"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수면"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_stress"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스트레스"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_anti_aging"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="항노화/항산화"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_skin"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="피부"
                    android:textColor="@color/chip_text_selector"
                    app:checkedIconEnabled="false"
                    app:chipBackgroundColor="@color/chip_background_selector"
                    app:chipStrokeColor="@color/chip_stroke_selector"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="8dp"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/rounded_button_green"
            android:enabled="false"
            android:text="0개 선택 완료"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>